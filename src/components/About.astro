---
const stats = [
	{ value: "5", label: "Year Engineering Degree" },
	{ value: "24", label: "Public Repositories" },
	{ value: "4+", label: "Frameworks Mastered" },
];

const techGroups = [
	{
		category: "Front-End",
		items: ["React", "Vue", "Next.js", "Nuxt", "Astro", "TypeScript", "Tailwind CSS"],
	},
	{
		category: "Mobile & Real-Time",
		items: ["React Native / Expo", "Socket.io", "PartyKit"],
	},
	{
		category: "Back-End & Data",
		items: ["Node.js", "Supabase", "Convex", "REST APIs"],
	},
	{
		category: "Tools & Other",
		items: ["Git", "GSAP", "Vite", "Python", "Rust", "Solana/Web3"],
	},
];
---

<section class="about" id="about">
	<div class="about-inner">
		<div class="section-label reveal">
			<span class="label-line"></span>
			<span class="label-text">About</span>
		</div>

		<div class="about-grid">
			<div class="about-text">
				<h2 class="reveal reveal-delay-1">A developer who cares about<br /><span class="text-accent">craft and detail.</span></h2>
				<p class="reveal reveal-delay-2">
					Software Engineer with a 5-year engineering degree from Casablanca, Morocco.
					I specialize in building front-end experiences that are fast, accessible, and visually sharp.
					From multiplayer games to mobile apps to browser extensions — I like shipping things that people actually use.
				</p>
				<p class="reveal reveal-delay-3">
					I work across the modern JS ecosystem — React, Vue, Next.js, Nuxt, React Native — and I'm always
					exploring new territory, whether that's animation libraries, real-time systems, or blockchain.
				</p>
			</div>

			<div class="about-stats reveal reveal-delay-2">
				{stats.map((stat) => (
					<div class="stat">
						<span class="stat-value">{stat.value}</span>
						<span class="stat-label">{stat.label}</span>
					</div>
				))}
			</div>
		</div>

		<div class="tech-stack reveal">
			<h3 class="tech-title">Tech I work with</h3>
			<div class="tech-groups">
				{techGroups.map((group) => (
					<div class="tech-group">
						<span class="tech-category">{group.category}</span>
						<div class="tech-items">
							{group.items.map((item) => (
								<span class="tech-item">{item}</span>
							))}
						</div>
					</div>
				))}
			</div>
		</div>
	</div>
</section>

<style>
	.about {
		padding: 8rem 2rem;
		border-top: 1px solid var(--border);
	}

	.about-inner {
		max-width: 1000px;
		margin: 0 auto;
	}

	.section-label {
		display: flex;
		align-items: center;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	.label-line {
		width: 40px;
		height: 1px;
		background: var(--accent);
	}

	.label-text {
		font-family: var(--font-mono);
		font-size: 0.8rem;
		color: var(--accent);
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}

	.about-grid {
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 4rem;
		align-items: start;
		margin-bottom: 5rem;
	}

	.about-text h2 {
		font-size: clamp(1.75rem, 3.5vw, 2.25rem);
		font-weight: 700;
		line-height: 1.3;
		letter-spacing: -0.03em;
		margin-bottom: 1.5rem;
	}

	.text-accent {
		color: var(--accent);
	}

	.about-text p {
		font-size: 1rem;
		line-height: 1.8;
		color: var(--text-muted);
		margin-bottom: 1rem;
	}

	.about-stats {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		padding-left: 2rem;
		border-left: 1px solid var(--border);
	}

	.stat {
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.stat-value {
		font-size: 2.5rem;
		font-weight: 800;
		letter-spacing: -0.04em;
		line-height: 1;
	}

	.stat-label {
		font-size: 0.8rem;
		color: var(--text-muted);
		font-family: var(--font-mono);
	}

	.tech-stack {
		padding: 2.5rem;
		background: var(--bg-elevated);
		border: 1px solid var(--border);
		border-radius: 16px;
	}

	.tech-title {
		font-size: 0.85rem;
		font-family: var(--font-mono);
		color: var(--text-muted);
		text-transform: uppercase;
		letter-spacing: 0.08em;
		margin-bottom: 2rem;
	}

	.tech-groups {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 2rem;
	}

	.tech-category {
		display: block;
		font-size: 0.75rem;
		color: var(--accent);
		font-family: var(--font-mono);
		margin-bottom: 0.75rem;
		text-transform: uppercase;
		letter-spacing: 0.06em;
	}

	.tech-items {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tech-item {
		font-size: 0.85rem;
		color: var(--text-muted);
		padding: 0.35rem 0.75rem;
		border: 1px solid var(--border);
		border-radius: 6px;
		transition: all 0.2s;
	}

	.tech-item:hover {
		border-color: var(--accent);
		color: var(--text);
		background: var(--accent-glow);
	}

	@media (max-width: 768px) {
		.about {
			padding: 5rem 1.25rem;
		}

		.about-grid {
			grid-template-columns: 1fr;
			gap: 2.5rem;
		}

		.about-stats {
			flex-direction: row;
			border-left: none;
			border-top: 1px solid var(--border);
			padding-left: 0;
			padding-top: 2rem;
		}

		.tech-stack {
			padding: 1.5rem;
		}
	}
</style>
