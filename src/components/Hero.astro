<section class="hero">
	<div class="hero-grid-bg"></div>
	<div class="hero-content">
		<div class="hero-badge">
			<span class="badge-dot"></span>
			Available for work
		</div>
		<h1 class="hero-title">
			<span class="line line-1">
				<span class="word" style="--delay: 0">I</span>
				<span class="word" style="--delay: 1">build</span>
			</span>
			<span class="line line-2">
				<span class="word highlight" style="--delay: 2">interfaces</span>
				<span class="word" style="--delay: 3">that</span>
			</span>
			<span class="line line-3">
				<span class="word" style="--delay: 4">feel</span>
				<span class="word highlight" style="--delay: 5">alive.</span>
			</span>
		</h1>
		<p class="hero-sub">
			Front-End Developer & Software Engineer based in Casablanca, Morocco.<br />
			Turning ideas into polished, interactive digital experiences.
		</p>
		<div class="hero-ctas">
			<a href="#projects" class="cta-primary">
				See my work
				<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<line x1="7" y1="17" x2="17" y2="7"></line>
					<polyline points="7 7 17 7 17 17"></polyline>
				</svg>
			</a>
			<a href="#contact" class="cta-secondary">Get in touch</a>
		</div>
	</div>
	<div class="hero-scroll-indicator">
		<div class="scroll-line"></div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 100vh;
		display: flex;
		align-items: center;
		padding: 6rem 2rem 4rem;
		overflow: hidden;
	}

	.hero-grid-bg {
		position: absolute;
		inset: 0;
		background-image:
			linear-gradient(rgba(196, 240, 66, 0.03) 1px, transparent 1px),
			linear-gradient(90deg, rgba(196, 240, 66, 0.03) 1px, transparent 1px);
		background-size: 60px 60px;
		mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 20%, transparent 100%);
		-webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 20%, transparent 100%);
	}

	.hero-content {
		max-width: 900px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.hero-badge {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.8rem;
		color: var(--accent);
		border: 1px solid rgba(196, 240, 66, 0.2);
		background: rgba(196, 240, 66, 0.05);
		padding: 0.4rem 1rem;
		border-radius: 100px;
		margin-bottom: 2.5rem;
		font-family: var(--font-mono);
		animation: fadeInUp 0.6s ease both;
	}

	.badge-dot {
		width: 6px;
		height: 6px;
		background: var(--accent);
		border-radius: 50%;
		animation: pulse 2s ease-in-out infinite;
	}

	.hero-title {
		font-size: clamp(3rem, 8vw, 6.5rem);
		font-weight: 800;
		line-height: 1.05;
		letter-spacing: -0.04em;
		margin-bottom: 2rem;
	}

	.line {
		display: block;
	}

	.word {
		display: inline-block;
		animation: wordReveal 0.8s cubic-bezier(0.22, 1, 0.36, 1) both;
		animation-delay: calc(var(--delay) * 0.1s + 0.3s);
	}

	.highlight {
		color: var(--accent);
	}

	.hero-sub {
		font-size: 1.125rem;
		line-height: 1.7;
		color: var(--text-muted);
		max-width: 500px;
		margin-bottom: 2.5rem;
		animation: fadeInUp 0.6s ease 0.8s both;
	}

	.hero-ctas {
		display: flex;
		gap: 1rem;
		align-items: center;
		animation: fadeInUp 0.6s ease 1s both;
	}

	.cta-primary {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.85rem 1.75rem;
		background: var(--accent);
		color: var(--bg);
		font-weight: 600;
		font-size: 0.9rem;
		border-radius: 10px;
		transition: all 0.25s ease;
	}

	.cta-primary:hover {
		background: var(--accent-dim);
		transform: translateY(-2px);
		box-shadow: 0 8px 30px var(--accent-glow);
	}

	.cta-primary svg {
		transition: transform 0.25s ease;
	}

	.cta-primary:hover svg {
		transform: translate(2px, -2px);
	}

	.cta-secondary {
		padding: 0.85rem 1.75rem;
		border: 1px solid var(--border);
		color: var(--text-muted);
		font-weight: 500;
		font-size: 0.9rem;
		border-radius: 10px;
		transition: all 0.25s ease;
	}

	.cta-secondary:hover {
		border-color: var(--text-muted);
		color: var(--text);
	}

	.hero-scroll-indicator {
		position: absolute;
		bottom: 2rem;
		left: 50%;
		transform: translateX(-50%);
		animation: fadeInUp 0.6s ease 1.4s both;
	}

	.scroll-line {
		width: 1px;
		height: 60px;
		background: linear-gradient(to bottom, var(--accent), transparent);
		animation: scrollPulse 2s ease-in-out infinite;
	}

	@keyframes wordReveal {
		from {
			opacity: 0;
			transform: translateY(40px) rotateX(40deg);
			filter: blur(4px);
		}
		to {
			opacity: 1;
			transform: translateY(0) rotateX(0deg);
			filter: blur(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.4; }
	}

	@keyframes scrollPulse {
		0%, 100% { opacity: 0.3; transform: scaleY(1); }
		50% { opacity: 1; transform: scaleY(1.2); }
	}

	@media (max-width: 640px) {
		.hero {
			padding: 5rem 1.25rem 3rem;
		}

		.hero-sub {
			font-size: 1rem;
		}

		.hero-ctas {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
